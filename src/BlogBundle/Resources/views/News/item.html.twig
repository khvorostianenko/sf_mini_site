{% extends "BlogBundle::layout.html.twig" %}

{% block title %}Single{% endblock %}

{% block body %}
    <h1>{{ news.title }}</h1>
    <p>{{ news.content| raw }}</p>
    <p>Категория новости: {{ news.categories.name }}</p>

    <br>
    <h4 class="col-md-offset-1">Оставьте свой комментарий</h4>
    {{ form_start(form, {'attr': {'class': 'form-horizontal col-md-offset-1'}}) }}
        {{ form_widget(form.newsId) }}
        <div class="form-group">
            {#<label for="nickname" class="col-sm-2 control-label">Представьтесь</label>#}
            <div class="col-sm-5">
                {{ form_widget(form.nickname, {'attr': {'class': 'form-control', 'placeholder': 'Укажите имя(nickname)'}}) }}
                {#<input name="nickname" type="text" class="form-control" id="nickname" placeholder="Имя">#}
            </div>
        </div>
        <div class="form-group">
            {#<label for="comment" class="col-sm-2 control-label">Комментарий</label>#}
            <div class="col-sm-5">
                {{ form_widget(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Комментарий'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class=" col-sm-5">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    {{ form_end(form) }}

    <br>
    <p>Комментарии:</p>
    {% for comment in  news.comments %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    {{ comment.nickname }}
                </h3>
            </div>
            <div class="panel-body">
                {{ comment.message }}
            </div>
        </div>
    {% else %}
        <p>Сообщений нет</p>
    {% endfor %}
{% endblock %}
